{
  "name": "switcho",
  "version": "1.0.5",
  "description": "A simple utility that improves JavaScript's built-in \"switch\" statement.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "declaration": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/il20afar/switcho.git"
  },
  "keywords": [
    "switch",
    "cases",
    "if",
    "else"
  ],
  "author": "il20afar <antoinefarley@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/il20afar/switcho/issues"
  },
  "homepage": "https://github.com/il20afar/switcho#readme",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.6"
  },
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write . ",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "typescript": "^4.3.2"
  }
}
