{
  "name": "switcho",
  "version": "1.0.0",
  "description": "A simple utility that improves the built-in \"switch\" statement.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/il20afar/switcho.git"
  },
  "keywords": [
    "switch",
    "cases",
    "ifelse"
  ],
  "author": "il20afar",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/il20afar/switcho/issues"
  },
  "homepage": "https://github.com/il20afar/switcho#readme",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "prettier": "^2.3.0",
    "ts-jest": "^26.5.6"
  },
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint '*/**/*.{js,ts}' --quiet --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write . ",
      "eslint --fix"
    ]
  }
}
